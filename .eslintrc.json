{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "eslint-config-prettier"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "func-names": "off",
    "indent": ["warn", 2],
    "no-console": "off",
    "no-unused-vars": "warn",
    "object-shorthand": "off",
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "semi": "error"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}
